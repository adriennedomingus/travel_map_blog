<div class="container">
  <%= form_for @trip do |f| %>
    <%= f.label :trip_name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :trip_start_date %>
    <%= f.text_field :start_date, class: 'form-control' %>
    <%= f.label :trip_end_date %>
    <%= f.text_field :end_date, class: 'form-control' %>
    <br>
    <%= f.label :trip_color %>
    <%= f.text_field :color, class: "form-control", as: :minicolors, input_html: { data: {
          minicolors: {theme: :bootstrap, position: :right}}} %>
    <br>
    <%= f.submit class: 'form-control' %>
  <% end %>
</div>
