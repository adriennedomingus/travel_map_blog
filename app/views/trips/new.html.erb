<div class="container">
  <%= form_for @trip, url: trips_path, method: :post do |f| %>
    <%= f.label :trip_name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :trip_start_date %>
    <%= f.text_field :start_date, class: 'form-control' %>
    <%= f.label :trip_end_date %>
    <%= f.text_field :end_date, class: 'form-control' %>
    <br>
    <%= f.submit "Create Trip", class: 'form-control' %>
  <% end %>
</div>
