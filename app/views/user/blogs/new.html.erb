<div class="container">
  <%= form_for @blog, url: user_blogs_url, method: :post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :date %>
    <%= f.text_field :date, class: 'form-control' %>
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
    <br>
    <%= f.submit "Post Blog", class: 'form-control' %>
  <% end %>
</div>
