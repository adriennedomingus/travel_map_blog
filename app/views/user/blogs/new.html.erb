<div class="container">
  <%= form_for @blog, url: user_blogs_url, method: :post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= f.label :date %>
    <%= f.text_field :date, class: 'form-control' %>
    <%= f.label :location %>
    <%= f.text_field :location, class: 'form-control' %>
    <%= f.label :trip %>
    <%= select("blog", :trip_id, current_user.trips.collect { |t| [t.name, t.id]}, {prompt: "None"}, class: 'form-control' )%>
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
    <br>
    <%= f.submit "Post Blog", class: 'form-control' %>
  <% end %>
</div>
