<div class="container-fluid landing-screen">
  <div class="row landing-text col-md-6 col-md-offset-3">
    <h3>Welcome to WanderMap</h3>
      <% if current_user %>
        <%= link_to "Your Map", user_path(current_user.nickname), class: "landing-button" %>
      <% else %>
        <%= link_to "Log In or Sign Up With Twitter", "/auth/twitter", class: "landing-button" %>
      <% end %>
  </div>
</div>
